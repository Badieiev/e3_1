@model  IEnumerable<e3_1.Models.Article>
@{
    ViewBag.Title = "Guest";
}

<header>
    <div class="top">
        <h2>Modern company</h2>
    </div>
</header>
<div class="layout">
    <div class="sidebar">
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Guest", "Guest", "Home")</li>
            <li>@Html.ActionLink("Profile", "Profile", "Home")</li>
        </ul>
    </div>
    <div class="content">
        <h2>list article:</h2>
        @foreach (var article in Model)
        {
            <p>@Html.DisplayFor(articleItem => article.Name)
            @Html.DisplayFor(articleItem => article.Date)</p>
            <p>@Html.DisplayFor(articleItem => article.Text)</p>
        }
    </div>
</div>


