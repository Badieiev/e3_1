
@{
    ViewBag.Title = "Profile";
}

<h2>fill out a form</h2>
@model e3_1.Models.Profile
@using (Html.BeginForm("Profile", "Article", FormMethod.Post))
{
    <h3>name:</h3>
    @Html.TextBoxFor(m => m.Name)
    <h3>age:</h3>
    @Html.TextBoxFor(m => m.Age)
    <br />
    <br />
    <h3>married</h3>
    @Html.RadioButtonFor(m => m.Single, true)<span>single</span>
    <br />
    @Html.RadioButtonFor(m => m.Single, false)<span>married</span>
    <br />
    <br />
    <h3>education</h3>
    @Html.CheckBoxFor(m => m.None)<span>none</span>
    <br />
    @Html.CheckBoxFor(m => m.High_school)<span>high_school</span>
    <br />
    @Html.CheckBoxFor(m => m.Bachelor)<span>bachelor</span>
    <br />
    @Html.CheckBoxFor(m => m.Master)<span>master</span>
    <br />
    @Html.CheckBoxFor(m => m.Phd)<span>phd</span>
    <br />
    <br />
    <input type="submit" name="Button" value="Submit" />
}

